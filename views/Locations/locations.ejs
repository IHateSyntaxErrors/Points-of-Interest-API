<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h4 class="font-weight-bold">All Locations</h4>
            </div>
            <div class="col-4">
                <a href="./addLocation" class="btn btn-success float-right" style="float: right;"><i class="fa-solid fa-plus"></i> Add New</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Country</th>
                    <th scope="col">Date Added</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(locations.length > 0) { %>
                    <% for(let location of locations) { %>
                    <tr>
                        <td><%= location.name %></td>
                        <td><%= location.country %></td>
                        <td><%= location.date_added %></td>
                        <td>
                            <a href="./updateLocation/<%= location._id %>" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="./deleteLocation/<%= location._id %>" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td>No locations found</td>
                        <td></td>
                        <td></td>
                    </tr>
                <% } %>
            </tbody>
            </table>
    </div>
</div>