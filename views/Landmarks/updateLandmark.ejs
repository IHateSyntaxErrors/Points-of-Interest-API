<div class="card">
    <div class="card-header">
        <h4 class="font-weight-bold">Edit Landmark</h4>
    </div>
    <div class="card-body">
        <form action="/updateLandmark/<%= landmark._id %>" method="post">
            <div class="row">
                <div class="col-12 mb-3">
                    <div class="form-group">
                        <label class="col-form-label" for="name">Name</label>
                        <input type="text" class="form-control" value="<%= landmark.name %>" name="name" placeholder="enter landmark name" id="name" />
                    </div>
                </div>
                <div class="col-12 mb-5">
                    <div class="form-group">
                        <label class="col-form-label" for="country">Country</label>
                        <input type="text" class="form-control" value="<%= landmark.country %>" name="country" placeholder="enter country name" id="country" />
                    </div>
                </div>
            </div>
            <div class="">
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-check"></i> Update</button>
                <a href="/" class="btn btn-light ms-2">Cancel</a>
           </div>
        </form>
    </div>
</div>